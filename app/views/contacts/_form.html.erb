<%= form_for @contact, url: contacts_path, remote: true do |f| %>
  <div class="col-md-6">
    <%= f.label :name %><br>
    <%= f.text_field  :name, required: true, class: "contact-form-text-area", required: true %><br>

    <%= f.label :email %></br>
    <%= f.text_field :email, required: true, class: "contact-form-text-area", required: true %><br>

    <%= f.label :message %></br>
    <%= f.text_area :message, rows: 8, cols: 40, required: true, class: "contact-form-text-area",
                    placeholder: "Enter your message here!", required: true%><br>

    <div class= "hidden">
      <%= f.label :nickname %>
      <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
    </div>

    <%= f.submit 'Send Message', class: 'btn btn-primary', data: {confirm: "Thank you for your email!\nWe will get back to you as soon as possible"}%>
  </div>
<% end %>
